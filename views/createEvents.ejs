<h1 class="text-center">Admin Dashboard - Create Events</h1>
<div class="row">
    <div class="col col-lg-8 m-auto">
        <%- include ('partials/adminnav') %>
    </div>
</div>
<div class="row">
    <div class="col col-lg-8 m-auto">
        <div class="card card-body">
            <form action="/create" method="POST">
                <div class="form-group">
                    <label for="title">Event Title</label>
                    <input class="form-control" type="text" id="title" name="title" autocomplete="off">
                </div>
                <div class="form-group">
                    <label for="description">Event Description</label>
                    <textarea class="form-control" id="description" name="description"></textarea>
                </div>
                <div class="form-group">
                    <label for="price">Event Price</label>
                    <input class="form-control" type="text" name="price" id="price" autocomplete="off">
                </div>
                <div class="form-group">
                    <label for="eventDate">Event Date</label>
                    <input class="form-control" type="date" name="eventDate" id="eventDate">
                </div>
                
                <div class="form-group">
                    <input type="submit" class="btn btn-block btn-primary" value="Create Event">
                </div>
            </form>
        </div>
    </div>
</div>